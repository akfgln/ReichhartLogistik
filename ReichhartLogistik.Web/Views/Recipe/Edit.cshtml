@model ReichhartLogistik.Models.EntityModels.RecipeModel

@{
    ViewData["Title"] = "Edit Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Recipe - @Model.Id</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
                    </label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="card shadow border-0 mt-4">
                <div class="card-header bg-secondary bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">Zutaten</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var recipeIngredients in Model.RecipeIngredients)
                            {
                                if (recipeIngredients.Ingredient != null)
                                {
                                    <tr>
                                        <td>@recipeIngredients.Ingredient.Name</td>
                                        <td>
                                            <div class="w-75 btn-group" role="group">
                                                <a asp-controller="Ingredient" asp-action="Details" asp-route-id="@recipeIngredients.Ingredient.Id" class="btn btn-primary mx-2">
                                                    <i class="bi bi-info"></i> Details
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
