@model RecipeModel

@{
    ViewData["Title"] = "Edit Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Details Recipe - @Model.Id</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Deleted)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Deleted)
                </dd>
            </dl>
            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary form-control">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-secondary border  form-control">
                        <i class="bi bi-info"></i> Zurück zur Liste
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card shadow border-0 mt-4">
                <div class="card-header bg-secondary bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">Zutaten</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var recipeIngredients in Model.RecipeIngredients)
                            {
                                if (recipeIngredients.Ingredient != null)
                                {
                                    <tr>
                                        <td>@recipeIngredients.Ingredient.Name</td>
                                        <td>
                                            <div class="w-75 btn-group" role="group">
                                                <a asp-controller="Ingredient" asp-action="Details" asp-route-id="@recipeIngredients.Ingredient.Id" class="btn btn-primary mx-2">
                                                    <i class="bi bi-info"></i> Details
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
